{
  "name": "@op-engineering/op-sqlite",
  "version": "0.0.0",
  "description": "Next generation SQLite for React Native",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "*.rb",
    "react-native.config.js",
    "ios/**.xcframework",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace op_sqlite_example",
    "typecheck": "tsc",
    "prepare": "bob build",
    "pods": "cd example && yarn pods",
    "clang-format-check": "clang-format -i cpp/*.cpp cpp/*.h"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "sqlite"
  ],
  "repository": "https://github.com/OP-Engineering/op-sqlite",
  "author": "Oscar Franco <ospfranco@protonmail.com> (https://github.com/ospfranco)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OP-Engineering/op-sqlite/issues"
  },
  "homepage": "https://github.com/OP-Engineering/op-sqlite#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "clang-format": "^1.8.0",
    "lefthook": "^1.5.5",
    "react": "19.1.1",
    "react-native": "0.81.0",
    "react-native-builder-bob": "^0.40.13",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.52.1"
  },
  "packageManager": "yarn@4.3.1"
}

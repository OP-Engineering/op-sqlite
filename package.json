{
  "name": "@op-engineering/op-sqlite",
  "version": "7.1.0",
  "description": "Next generation SQLite for React Native",
  "source": "./src/index.ts",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!android/.cxx",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace op_sqlite_example",
    "typecheck": "tsc --noEmit",
    "prepare": "bob build",
    "pods": "cd example && yarn pods",
    "clang-format-check": "clang-format -i cpp/*.cpp cpp/*.h"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "sqlite"
  ],
  "repository": "https://github.com/OP-Engineering/op-sqlite",
  "author": "Oscar Franco <ospfranco@protonmail.com> (https://github.com/ospfranco)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OP-Engineering/op-sqlite/issues"
  },
  "homepage": "https://github.com/OP-Engineering/op-sqlite#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "clang-format": "^1.8.0",
    "lefthook": "^1.5.5",
    "react": "18.2.0",
    "react-native": "0.74.0",
    "react-native-builder-bob": "^0.30.0",
    "turbo": "^1.12.4",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "packageManager": "yarn@4.4.1"
}

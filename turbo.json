{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "run:android:release": {
      "inputs": [
        "package.json",
        "android",
        "!android/build",
        "src/*.ts",
        "src/tests/*.ts",
        "example/package.json",
        "example/android",
        "cpp/*.cpp",
        "cpp/*.h",
        "!example/android/.gradle",
        "!example/android/build",
        "!example/android/app/build"
      ],
      "outputs": []
    },
    "run:ios": {
      "inputs": [
        "package.json",
        "*.podspec",
        "ios",
        "cpp/*.cpp",
        "cpp/*.h",
        "src/*.ts",
        "src/tests/*.ts",
        "example/package.json",
        "example/ios",
        "!example/ios/build",
        "!example/ios/Pods"
      ],
      "outputs": []
    }
  }
}
